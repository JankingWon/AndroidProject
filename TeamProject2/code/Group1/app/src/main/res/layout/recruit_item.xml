<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:layout_gravity="center"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <!---->



        <ImageView
            android:id="@+id/recruit_item_state"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"

            android:layout_marginEnd="15dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/recruting" />

        <TextView
            android:id="@+id/recruit_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="250dp"
            android:text="招一起听触手猴演奏会"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/recruit_item_type"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"

            android:layout_below="@id/recruit_item_title"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:gravity="center"
            android:text="室内"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/recruit_item_div1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/recruit_item_type"
            android:background="@color/lightgray" />

        <TextView
            android:id="@+id/recruit_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recruit_item_div1"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="2019-03-31 17:23"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/recruit_item_body"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/recruit_item_date"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="招募一起听触手猴演奏会的小可爱，在星海音乐厅"
            android:textSize="17sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>